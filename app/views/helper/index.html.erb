<h1><center>Helper Landing Page</center></h1>

<h3>Pending Tasks</h3>
<table class="table table-hover table-striped table-bordered table-sm">
    <tr class="table-dark">
        <th>Task Name</th>
        <th>Details</th>
        <th>Date</th>
        <th>Hourly Rate</th>
    </tr>


    <% @tasks.each do |task|%>
        <% if task.helper_id == current_user.id %> 
            <tr>
                <td><%= task.name %></td>
                <td><%= task.details %></td>
                <td><%= task.date %></td>
                <td><%= task.hourly_rate %></td>
            </tr>
        <%end%>
    <%end%>
</table>

<h3>Accomplished Tasks</h3>
