<h1><center>Helper Landing Page</center></h1>

<h3>Pending Tasks</h3>
<table class="table table-hover table-striped table-bordered table-sm">
    <tr class="table-dark">
        <th>Task Name</th>
        <th>Details</th>
        <th>Date</th>
        <th>Hourly Rate</th>
        <th>Client Name</th>
    </tr>


    <% @tasks.each do |task|%>
        <% array = task.helper_applicants.to_a %>
        <% if array.include?(current_user.id) == true %> 
        <tr>
            <td><%= task.name %></td>
            <td><%= task.details %></td>
            <td><%= task.date %></td>
            <td><%= task.hourly_rate %></td>
            <td><%= task.created_by %></td>
        </tr>
        <%end%>
    <% end %>
</table>

