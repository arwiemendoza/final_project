<h1><center>Client</center></h1>

<h1> Category </h1>

<table class="table table-hover table-striped table-bordered table-sm">
    <tr class="table-dark">
        <th>Category name</th>
        <th colspan="2"></th>
    </tr>

    <% @user.categories.each do |category|%>
        <tr>
            <td><%= category.name %></td>
            <td class="d-inline justify-content-lg-center">
                <%= link_to 'Show', category_path(category.id), class: "btn btn-outline-dark btn-sm" %>
            </td>
        </tr>    
    <%end%>

</table>