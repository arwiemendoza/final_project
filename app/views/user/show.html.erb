<h1><center>USER SHOW</center></h1>

<div class="container h-2/4 flex justify-center items-center ">
<h5><%= @user.first_name %></h5>
<h5><%= @user.last_name %></h5>
<h5><%= @user.email %></h5>
<h5><%= @balance %></h5>
<br>

<h1> Deposit Money </h1>
<%= form_with url: deposit_path do |f| %>

    <div class="field">
        <%= f.label :amount %><br/>
        <%= f.number_field :amount %>
    </div>   

    <div class="actions">
        <%= f.submit "Deposit" %>
    </div>

<% end %>

<br>

<h1> Withdraw Money </h1>
<%= form_with url: withdraw_path do |f| %>

    <div class="field">
        <%= f.label :amount %><br/>
        <%= f.number_field :amount %>
    </div>   

    <div class="actions">
        <%= f.submit "Withdraw" %>
    </div>

<% end %>

<%= link_to 'Back', :back %>
</div>


