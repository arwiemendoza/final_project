<h1> Tasks </h1>
<%= form_for @tasks, url: category_tasks_path do |f| %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :details %><br/>
    <%= f.text_field :details %>
  </div>

  <div class="field">
    <%= f.label :date %><br/>
    <%= f.date_field :date %>
  </div>

  <div class="field">
    <%= f.label :hourly_rate %><br/>
    <%= f.float_field :hourly_rate %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>
