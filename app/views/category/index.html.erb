
<h1> Category </h1>
    <% if current_user.admin %>
        <div class="d-none">
            <%= form_for @ccategories, url: category_index_path do |f| %>
                <div class="field">
                    <%= f.label :name %><br/>
                    <%= f.text_field :name %>
                </div>

                <div class="field">
                    <%= f.label :description %><br/>
                    <%= f.text_field :description %>
                </div>

                <div class="actions">
                    <%= f.submit "Create" %>
                </div>
            <% end %>
        </div>
    <% end %>
<br/>
<br/>
    <% @categories.each do |category|%>
           <%= link_to category.name, category_path(category.id) %>
    <% end %>

